# Copy this file to .env and fill in your actual values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Gemini AI API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets API Credentials (from Google Cloud Console)
# You can either use individual fields OR the JSON file
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your_private_key_here
GOOGLE_PROJECT_ID=your_project_id

# OR place your service account JSON file as 'telegram_service_account.json'
